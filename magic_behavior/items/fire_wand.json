                    "event": "yes:damage_event",
                    "target": "self"
                }
            },
            "minecraft:mining_speed": 1,
            "minecraft:damage": 3,
            "minecraft:can_destroy_in_creative": false
        },
        "events": {
            "shoot_fireball": {
				"sequence": [
					{
                        "damage": {
                            "type": "durability",
                            "amount": 1,
                            "target": "self"
                        }
                    },
                    {
                        "swing":{
                        }
                    },
                    {
                        "shoot": {
                            "projectile": "magic:flameball",
                            "launch_power": 1,
                            "angle_offset": 0
                        }
                    },
                    {
                        "run_command": {
                            "command": [
                                "execute @s ~ ~2 ~ particle minecraft:basic_flame_particle ^ ^ ^1",
                                "playsound mob.blaze.shoot @s ~ ~ ~ 0.3"
                            ],
                            "target": "holder"
                        }
                    }
                ]
            },
            "yes:damage_event": {
                "damage": {
                    "type": "durability",
                    "amount": 1
                }
            }
        }
