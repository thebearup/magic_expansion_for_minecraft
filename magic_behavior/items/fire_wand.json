            },
            "minecraft:durability": {
                "max_durability": 120,
                "damage_chance": {
                    "min": 90,
                    "max": 100
                }
            },
            "minecraft:repairable": {
                "repair_items": [
                    {
                        "items": [
                            "magic:fire_wand",
                            "minecraft:blaze_rod"
