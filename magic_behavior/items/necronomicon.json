{
    "format_version": "1.16.100",
    "minecraft:item": {
        "description": {
            "identifier": "magic:necronomicon",
            "category": "equipment"
        },
        "components": {
            "minecraft:icon": {
                "texture": "necronomicon"
            },
            "minecraft:display_name": {
                "value":"Necronomicon"
            },
            "minecraft:creative_category": {
                "parent": "itemGroup.name.equipment"
            },
            "minecraft:hand_equipped": true,
            "minecraft:max_stack_size": 1,
            "minecraft:allow_off_hand": true,
            "minecraft:render_offsets": "tools",
            "minecraft:enchantable": {
                "value": 10,
                "slot": "shears"
            },
            "minecraft:durability": {
                "max_durability": 120,
                "damage_chance": {
                    "min": 90,
                    "max": 100
                }
            },
            "minecraft:on_use": {
                "on_use": {
                    "event": "summon_skeleton",
                    "target": "self"
                }
            },
            "minecraft:cooldown": {
                "category": "necronomicon",
                "duration": 10.0
            },
            "minecraft:weapon": {
                "on_hurt_entity": {
                    "event": "yes:damage_event",
                    "target": "self"
                }
            },
            "minecraft:mining_speed": 1,
            "minecraft:damage": 3,
            "minecraft:can_destroy_in_creative": false
        },
        "events": {
            "summon_skeleton": {
                "sequence": [
                    {
                        "damage": {
                            "type": "durability",
                            "amount": 1,
                            "target": "self"
                        }
                    },
                    {
                        "swing": {}
                    },
                    {
                        "run_command": {
                            "command": [
                                "execute @s ~ ~2 ~ particle minecraft:soul_particle ^ ^ ^1",
                                "playsound mob.blaze.death @s ~ ~ ~ 0.3",
                                "summon magic:skeleton_minion"
                            ],
                            "target": "holder"
                        }
                    }
                ]
            },
            "yes:damage_event": {
                "damage": {
                    "type": "durability",
                    "amount": 1
                }
            }
        }
    }
}