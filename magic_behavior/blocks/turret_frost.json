{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "magic:turret_frost",
            "is_experimental": false,
            "register_to_creative_menu": true
        },
        "components": {
            "minecraft:destroy_time": 1,
            "minecraft:explosion_resistance": 5,
            "minecraft:friction": 0.6,
            "minecraft:flammable": {
                "flame_odds": 0,
                "burn_odds": 0
            },
            "minecraft:map_color": "#FFFFFF",
            "minecraft:block_light_absorption": 0,
            "minecraft:block_light_emission": 0.750,
            "minecraft:on_placed": {
                "event": "block_placed",
                "target": "self"
            },
            "minecraft:on_player_destroyed":{
                "event" : "block_destroyed",
                "target": "self"
            },
            "minecraft:geometry": "geometry.turret",
			"minecraft:material_instances": {
				"*": {
                    "texture": "turret_obsidian",
					"render_method": "alpha_test"
				}
			},
			"minecraft:pick_collision": {
				"origin": [	-8,	0,-8],
				"size": [16, 10, 16]
			},
			"minecraft:entity_collision": {
				"origin": [	-8,	0, -8],
				"size": [ 16, 10, 16]
			}
        },
        "events": {
          "block_placed": {
              "run_command": {
                  "command": [
                      "summon magic:turret_frost Turret ~ ~1 ~"
                  ]
              }
          },
          "block_destroyed": {
              "run_command": {
                  "command": [
                      "kill @e[type=magic:turret_frost,c=1,r=1]"
                  ]
              }
          }
        }
    }
}